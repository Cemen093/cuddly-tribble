@page "/cart"
@using DishesStore.Data
@using DishesStore.Db.Model


<div class="stretched">
    <div class="cart-container">
        <div class="cart-holder">
            <div class="cart-left-part">
                <div class="content-holder">
                    <div>
                        <h4 class="cart-title">Cart</h4><hr />
                    </div>
                    <div>
                        @if (@Cart.Dishes.Count == 0)
                        {
                            <div class="cart-warn-title">
                                There's <span style="color: #e4002b">nothing</span> yet. Add your first dish before you can order it!
                            </div>
                        }
                        else
                        {

                            @foreach (var item in @Cart.Dishes)
                            {
                                <div class="cart-item">
                                    <div style="width: 20%">
                                        <img class="cart-item-image" src="https://mercatopizzakurier.ch/wp-content/uploads/2019/10/1459955-free-png-pepperoni-pizza-png-images-transparent-free-png-images-pizza-850_834.png">
                                    </div>
                                    <div class="cart-item-additional-info">
                                        <div>
                                            <div class="cart-info-part">
                                                <div>
                                                    <span class="cart-item-title">@item.Name</span>
                                                </div>
                                                <div>
                                                    <span class="cart-item-total-price">$@item.Price</span>
                                                </div>
                                            </div>
                                            <div class="cart-item-price">
                                                $@item.Price apiece
                                            </div>
                                        </div>
                                        <div>
                                            <div class="cart-info-part">
                                                <div class="cart-item-description">
                                                    @item.Description
                                                </div>
                                                <div>
                                                    <button class="cart-remove-button" @onclick="@((args)=>OnRemove(@item))">Remove</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="cart-right-part">
                <div class="content-holder">
                    <div>
                        <h4 class="delivery-title">Delivery</h4>
                        <div style="display: flex; justify-content: space-between;">
                            <div class="switch-field">
                                <input type="radio" id="radio-one" name="switch-one" value="Pickup" checked @onchange="ChangeState" />
                                <label for="radio-one">PickUp</label>
                                <input type="radio" id="radio-two" name="switch-one" value="Delivery: $9.99" @onchange="ChangeState" />
                                <label for="radio-two">Delivery: $9.99</label>
                            </div>
                        </div>
                        <span class="delivery-description">We'll deliver it in shortest terms!</span>
                        <hr class="delivery-division" />
                        <div class="delivery-additional">
                            <div class="dish-cart-preview dish-cart-preview-title">
                                <div>Item</div>
                                <div>Price</div>
                            </div>
                            @foreach (var item in Cart.Dishes)
                            {
                                <div class="dish-cart-preview">
                                    <div>@item.Name</div>
                                    <div class="dish-cart-preview-price">$@item.Price</div>
                                </div>
                            }
                            @if (IsDeliveryChoosed)
                            {
                                <div class="dish-cart-preview">
                                    <div>Delivery</div>
                                    <div class="dish-cart-preview-price">$9.99</div>
                                </div>
                            }
                        </div>
                        <hr class="delivery-division" />
                        <div class="dish-cart-preview dish-cart-preview-title">
                            <div>Total @IsDeliveryChoosed.ToString()</div>
                            <div class="dish-cart-preview-price">$@(Math.Round(@Cart.GetPrice() + (@IsDeliveryChoosed ? 9.99 : 0), 2))</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code
{
    bool IsDeliveryChoosed = false;

    int Id = 0;
    private void OnRemove(Dish dish)
    {
        Cart.RemoveItem(dish);
    }

    private void ChangeState(ChangeEventArgs args)
    {
        IsDeliveryChoosed = args.Value?.ToString() != "PickUp";
        StateHasChanged();
    }
}
